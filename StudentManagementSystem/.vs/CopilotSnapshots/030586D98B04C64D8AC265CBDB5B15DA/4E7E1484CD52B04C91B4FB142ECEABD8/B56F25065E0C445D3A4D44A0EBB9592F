using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace StudentManagementSystem.Models
{
    internal class StudentManager
    {
        private List<Student> students = new List<Student>();
        public void AddStudent(Student student)
        {
            if (student == null)
            {
                throw new ArgumentNullException(nameof(student), "Student cannot be null");
            }
            students.Add(student);
        }
        public void RemoveStudent(int id)
        {
            var student = students.FirstOrDefault(s => s.Id == id);
            if (student == null)
            {
                throw new ArgumentException("Student with the given ID does not exist");
            }
            students.Remove(student);
        }
        public void UpdateStudent(Student updatedStudent)
        {
            if (updatedStudent == null)
            {
                throw new ArgumentNullException(nameof(updatedStudent), "Updated student cannot be null");
            }
            var student = students.FirstOrDefault(s => s.Id == updatedStudent.Id);
            if (student == null)
            {
                throw new ArgumentException("Student with the given ID does not exist");
            }
            student.Name = updatedStudent.Name;
            student.Age = updatedStudent.Age;
            student.Grade = updatedStudent.Grade;
        }
        public List<Student> GetAllStudents()
        {
            return students;
        }
        public void SaveToFile(string filePath)
        {
            var lines = students.Select(s => $"{s.Id},{s.Name},{s.Age},{s.Grade}");
            System.IO.File.WriteAllLines($"C:\Users\amilm\OneDrive\Desktop\Pa201\StudentManagementSystem",lines);
        }

    }
}
